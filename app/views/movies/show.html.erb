<% content_for :head do %>
	<script type="text/javascript" charset="utf-8">
		$(document).ready(function () {
			flowplayer("player", "/flash/flowplayer-3.1.5.swf");
		});
	</script>
<% end %>
<%= render :partial => "/shared/guild_sidebar" %>
<div class="content">
	<div class="box">
		<div>
			<%= link_to "Filmy", guild_movies_path(@guild) %> &#x2192; <%= content_tag :b, @movie.title %>
		</div>
	</div>
	
	<div class="box">
		<div class="text_align">
			<a  
				 href="<%= @movie.video.url %>"  
				 style="display:block;width:480px;height:383px; margin: 10px auto;"  
				 id="player"> 
			</a> 
		</div>
	</div>
	
	<div class="box">
		<div>
			<%= simple_format @movie.description %>
		</div>
	</div>
</div>