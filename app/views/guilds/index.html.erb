<div class="content center">
	<div class="box">
		<div>
			<table>
				<thead>
					<tr>
						<th width="100px">Logo</th>
						<th>Gildia</th>
					</tr>
				</thead>
				<tbody>
					<% for guild in @guilds %>
					<tr>
						<td>
							<%= image_tag guild.logo.url(:mini) %>
						</td>
						<td>
							<%= link_to guild.name, guild %><br/>
							<%= simple_format guild.about %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
			
			<%= will_paginate @guilds %>
		</div>
	</div>
</div>