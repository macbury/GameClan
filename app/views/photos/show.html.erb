<%= render :partial => "/shared/guild_sidebar" %>
<div class="content">
	<div class="box">
		<div class="text_center">
			<%= link_to "&#x2190; Wstecz", [@guild, @back], :class => 'left' unless @back.nil? %>
			<b><%= link_to "Pokaż wszystkie", guild_photos_path(@guild) %></b>
			<%= link_to "Dalej &#x2192;", [@guild, @next], :class => 'right' unless @next.nil? %>
			<div class="clear"></div>
		</div>
	</div>
	
	<div class="box">
		<div>
			<script type="text/javascript" id="AdTaily_Widget" key="X4ycGaq8yMlXCo4" src="http://static.adtaily.com/widget.js"></script>
			<noscript>Reklamy na tej stronie sprzedawane są przez widget z AdTaily.com (PLBLOADTAILY0001)</noscript>
		</div>
	</div>
	
	<div class="box">
		<div class="text_center">
			<%= link_to image_tag(@photo.url(:preview)), @photo.url, :target => "_blank" %>
			<p>
				<label for="forum_link">Link na forum:</label>
				<%= text_field_tag 'forum_link', "\"!#{@photo.url(:forum)}(Textist)!\":#{guild_photo_url(@guild, @photo)}", :readonly=>true %>
			</p>
			<p>
				Dodane przez: <%= link_to @photo.user.login, @photo.user %>
			</p>
			<% if permitted_to? :edit, @photo %>
			<div class="button">
				<%= link_to "Usuń zdjęcie", [@guild, @photo], :method => :delete, :confirm => "Czy na pewno chcesz usunąć te zdjęcie?" %>
			</div>
			<% end %>
		</div>
	</div>

</div>