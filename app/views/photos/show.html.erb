<%= render :partial => "/shared/guild_sidebar" %>
<div class="content">
	<div class="box">
		<div class="text_center">
			<%= link_to "&#x2190; Wstecz", [@guild, @back], :class => 'left' unless @back.nil? %>
			<b><%= link_to "Pokaż wszystkie", guild_photos_path(@guild) %></b>
			<%= link_to "Dalej &#x2192;", [@guild, @next], :class => 'right' unless @next.nil? %>
			<div class="clear"></div>
		</div>
	</div>
	
	<div class="box">
		<div class="text_center">
			<%= link_to image_tag(@photo.url(:preview)), @photo.url, :target => "_blank" %><br/>
			<label for="forum_link">Link na forum:</label>
			<%= text_field_tag 'forum_link', "\"!#{@photo.url(:forum)}(Textist)!\":#{guild_photo_url(@guild, @photo)}", :readonly=>true %>
		</div>
	</div>
	
	<% if permitted_to? :edit, @photo %>
	<div class="box">
		<div class="text_center">
			<div class="button">
				<%= link_to "Usuń", [@guild, @photo], :method => :delete, :confirm => "Czy na pewno chcesz usunąć te zdjęcie?" %>
			</div>
		</div>
	</div>
	<% end %>
</div>